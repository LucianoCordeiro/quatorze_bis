<h2 class="cadastro">Log in</h2>

<div class="col-md-6 col-md-offset-3">
<div class="cont">

<%= form_for(:session) do |f| %>


<%= f.label :email %>
<%= f.email_field :email, class: 'form-control' %>

<%= f.label :password, "Senha" %>
<%= f.password_field :password, class: 'form-control' %>

<div class="col-md-4 col-md-offset-4">
  <%= f.submit "Log in", class: "btn btn-primary black-background white" %>
</div>
<% end %>
</div>
<p>Caso ainda não tenha uma conta, então <%= link_to "crie uma nova conta.", signup_path %></p>
</div>
