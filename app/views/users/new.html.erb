<h2 class="cadastro">Página de cadastro</h2>
<div class="col-md-6 col-md-offset-3">
<div class="cont">
<p>Preencha os campos a seguir com os seus dados:</p>
<%= form_for(@user) do |f| %>

<%= render 'shared/error_messages' %>

<%= f.label :name, "Nome" %>
<%= f.text_field :name, class: 'form-control' %>

<%= f.label :email %>
<%= f.email_field :email, class: 'form-control' %>

<%= f.label :password, "Senha" %>
<%= f.password_field :password, class: 'form-control' %>

<%= f.label :password_confirmation, "Confirmação de Senha" %>
<%= f.password_field :password_confirmation, class: 'form-control' %>

<div class="col-md-4 col-md-offset-4">
  <%= f.submit "Criar conta", class: "btn btn-primary black-background white" %>
</div>
<% end %>
</div>
</div>
